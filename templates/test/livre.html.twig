{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
<h1>{{title}}</h1>
<h2>Liste de tous les livres triés par ordre alphabétique</h2>
{% for livre in livres %}
<p>{{livre.titre}} ( id : {{livre.id}})</p>
{% endfor %}

<h2>Livre dont l'id est 1</h2>
<p>{{livre1.titre}} (id : {{livre1.id}})</p>

<h2>Liste de tous les livres dont le titre contient 'lorem' triés par ordre alphabétique</h2>
{% for livre in lorem %}
<p>{{livre.titre}} ( id : {{livre.id}})</p>
{% endfor %}

<h2>Livre dont l'id de l'auteur est 2</h2>
{% for livre in auteur2livre %}
<p>{{livre.titre}} (id : {{livre.id}}) </p>
{% endfor %}

<h2>Livre dont l'id du genre est 2</h2>
{% for livre in genre2livre %}
<p>{{livre.titre}} (id : {{livre.id}}) </p>
{% endfor %}

{% endblock %}
